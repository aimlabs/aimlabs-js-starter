{
  "tags": {
    "allowUnknownTags": true
  },
  "source": {
    "include": ["src"],
    "exclude": [
      ".git",
      ".meteor"
    ],
    "includePattern": ".+\\.js(x|doc)?$"
  },
  "plugins": [
    "plugins/markdown",
    "plugins/summarize"
  ],
  "opts": {
    "encoding": "utf8",
    "template": "node_modules/docdash",
    "destination": "build/docs",
    "recurse": true,
    "verbose": true
  },
  "markdown": {
    "parser": "gfm",
    "hardwrap": true
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false
  },
  "docdash": {
    "search" : true,
    "typedefs" : true
  }
}
